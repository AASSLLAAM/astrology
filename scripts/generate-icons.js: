// Run: npm install sharp && node scripts/generate-icons.js
const sharp = require('sharp');
const fs = require('fs');
const path = require('path');

const sizes = [72, 96, 128, 144, 152, 192, 384, 512];
const inputSvg = fs.readFileSync('icon-master.svg');
const maskableSvg = fs.readFileSync('maskable-icon-master.svg');

const outputDir = path.join(__dirname, '../public/icons');

if (!fs.existsSync(outputDir)) {
  fs.mkdirSync(outputDir, { recursive: true });
}

// Generate regular icons
sizes.forEach(async (size) => {
  await sharp(inputSvg)
    .resize(size, size)
    .png()
    .toFile(path.join(outputDir, `icon-${size}x${size}.png`));
  console.log(`Generated icon-${size}x${size}.png`);
});

// Generate maskable icon
sharp(maskableSvg)
  .resize(512, 512)
  .png()
  .toFile(path.join(outputDir, 'maskable-icon-512x512.png'))
  .then(() => console.log('Generated maskable-icon-512x512.png'));

// Generate favicon
sharp(inputSvg)
  .resize(32, 32)
  .toFile(path.join(__dirname, '../public/favicon.ico'))
  .then(() => console.log('Generated favicon.ico'));

// Generate apple-touch-icon
sharp(inputSvg)
  .resize(180, 180)
  .png()
  .toFile(path.join(__dirname, '../public/apple-touch-icon.png'))
  .then(() => console.log('Generated apple-touch-icon.png'));
